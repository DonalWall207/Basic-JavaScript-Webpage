<div class="ui card" id ="{{name}}">
  <div class="image">
    <img src="{{image}}">
  </div>
  <div class="content">
    <a class="header">{{fullname}}</a>
    <div class="meta">
      <span class="date">Released in {{released}}</span>
    </div>
    <div class="description">
      {{name}} is a {{genre}} game
    </div>
  </div>
  <div class="extra content">
    <a>
      <i class="user icon"></i>
      {{hours}} hrs
    </a>
  </div>
</div>